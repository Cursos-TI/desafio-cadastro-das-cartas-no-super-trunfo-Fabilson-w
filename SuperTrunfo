#include <stdio.h>

 int main() {
    char Estado;
    char Codigo[20];
    char nomedacidade[20];
    int População;
    float Área;
    float PIB;
    int Pontosturisticos;
    char estado;
    char codigo[20];
    char Nomedacidade[20];
    int população;
    float area;
    float pIB;
    int pontosturisticos;

    printf("Digite a inicial Estado A: \n");
    scanf("%s", Estado);
    
    printf("Digite o Codigo Carta A: \n");
    scanf(" %s", Codigo);

    printf("Digite o nome Cidade A: \n");
    scanf("%s", nomedacidade);

    printf("Digite a População da cidade A: \n");
    scanf("%d", &População);

    printf("Digite a Área da Cidade A: \n");
    scanf("%f", &Área);

    printf("Digite o PIB da cidade A: \n");
    scanf("%f", &PIB);

    printf("Digite a quantidade de pontos turísticos da Cidade A: \n");
    scanf("%d", &Pontosturisticos);

    printf("Digite a inicial do Estado B: \n");
    scanf("%s", estado);
    
    printf("Digite o Codigo da Carta B: \n");
    scanf(" %s", codigo);

    printf("Digite o nome da Cidade B: \n");
    scanf("%s", Nomedacidade);

    printf("Digite a População da cidade B: \n");
    scanf("%d", &população);

    printf("Digite a Área da Cidade B: \n");
    scanf("%f", &area);

    printf("Digite o PIB da cidade B: \n");
    scanf("%f", &pIB);

    printf("Digite a quantidade de pontos turísticos da Cidade B: \n");
    scanf("%d", &pontosturisticos);

    printf("Inicial do Estado A: %s - Codigo da Carta A: %s - Nome da Cidade A: %s \n", Estado, Codigo, nomedacidade);
    printf("Quantidade de habitate A: %d - Área A: %f - PIB A: %f - Quantidade de Pontos Turísticos A: %d \n", População, Área, PIB, Pontosturisticos);
    printf("Inicial do Estado B: %s - Codigo da Carta B: %s - Nome da Cidade B: %s \n", estado, codigo, Nomedacidade);
    printf("Quantidade de habitate B: %d - Área B: %f - PIB B: %f - Quantidade de Pontos Turísticos B: %d", população, area, pIB, pontosturisticos);
    return 0;
}